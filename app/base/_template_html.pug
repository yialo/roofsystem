include ../global/data/_d_common

block page-id

- const pageTitle = PAGES[pageId];

include _import_functions
include _import_mixins

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title #{pageTitle} | #{SITE_TITLE}
    include ../global/head/_head_general_meta
    include ../global/head/_head_favicons
    include ../global/head/_head_fonts
    link(rel='stylesheet', href='css/main.min.css')
    if pageId === 'gallery'
      link(
        rel='preload',
        href='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js',
        as='script',
      )
  body(class=setModifiers('page', [pageId]))
    .page__container
      header.page__header
        include ../components/capital/_page-header/_page-header
      main.page__main
        block page-main
      footer.page__footer
        .page-footer.container
          .s-container.page-footer__container.row
            div(class=setModifiers('page-footer__nest', ['copyright'])).col-12
              .page-footer__inner-wrapper
                p.page-footer__paragraph © 2018 Roofsystem. Все права защищены.
            div(class=setModifiers('page-footer__nest', ['creator'])).col-12
              .page-footer__inner-wrapper
                a.page-footer__link(href='https://www.waytostart.ru/')
                  p.page-footer__paragraph
                    | Создание сайта #[span.page-footer__string WayToStart]
    block scripts
      script(src='js/picturefill.js')
