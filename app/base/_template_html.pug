block page-id

- const $pageTitle = $PAGES[pageId];

include _import_functions.pug
include _import_mixins.pug

doctype html
html(lang='ru')
  include ../global/head/_head.pug
  body(class=setModifiers('page', [pageId]))
    .page__container
      header.page__header
        include ../components/capital/page-header/_page-header.pug
      main.page__main
        div(class=[setModifiers('page-main', [pageId])])
          block page-main_Content
      footer.page__footer
        include ../components/capital/page-footer/_page-footer.pug
    include ../components/capital/page/_page_Scripts.pug
