include ../global/data/_d_common

block page-id

- const pageTitle = PAGES[pageId];

include _import_functions
include _import_mixins

doctype html
html(lang='ru')
  include ../components/capital/_head/_head
  body(class=setModifiers('page', [pageId]))
    .page__container
      header.page__header
        include ../components/capital/_page-header/_page-header
      main.page__main
        div(class=[setModifiers('page-main', [pageId])])
          block page-main_CONTENT
      footer.page__footer
        include ../components/capital/_page-footer/_page-footer
      include ../components/capital/_page/_page__scripts
